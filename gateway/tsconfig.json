{
    "compilerOptions": {
      "strict": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowJs": true,
      "target": "ES2019",
      "outDir": ".build",
      "moduleResolution": "node",
      "module": "CommonJS",
      "lib": ["ES2019"],
      "rootDir": "./",
      "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["./node_modules", "**/*.spec.ts"]
  }
  